{% extends 'PaulBundle::base.html.twig' %}

{% block body %}
	<a href="{{ path('paul_discipline_index') }}">{{ 'sportList'|trans }}</a>

	{{ form_start(form) }}
	{{ form_widget(form) }}
	{{ form_end(form) }}

	<h3>{{ 'athleteList'|trans }} ({{ discipline.athletes.count }})</h3>

	<ul>
		{% for a in discipline.athletes %}
			<li>
				<a href="{{ path('paul_athlete_edit', {'athleteId': a.id}) }}">
					<img src="{{ asset("assets/img/drapeaux/#{a.pays.drapeau}") }}" alt="{{ a.prenom }} {{ a.nom }}" />
					<img src="{{ asset("assets/img/athletes/#{a.photo}") }}" alt="{{ a.prenom }} {{ a.nom }}" style="max-width: 40px; max-height: 40px;" />
					{{ a.prenom }} {{ a.nom }}
				</a>
			</li>
		{% endfor %}
	</ul>
{% endblock %}
